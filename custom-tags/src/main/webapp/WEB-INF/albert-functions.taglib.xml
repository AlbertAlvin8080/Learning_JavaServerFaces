<?xml version="1.0" encoding="utf-8" ?>
<facelet-taglib
        xmlns="https://jakarta.ee/xml/ns/jakartaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-facelettaglibrary_3_0.xsd"
        version="3.0"
>
    <description>Albert Functions</description>
    <namespace>http://albert.com.br/functions</namespace>
    <short-name>af</short-name>

    <function>
        <description>
            <![CDATA[Changes all occurrences of a string in a java.lang.String. It accepts regex.]]>
        </description>
        <function-name>replaceCertainString</function-name>
        <function-class>org.example.customtags.taglib_functions.TaglibFunctions</function-class>
        <function-signature>java.lang.String replaceCertainString(java.lang.String, java.lang.String, java.lang.String)
        </function-signature>
    </function>

    <function>
        <description><![CDATA[Reverses a java.lang.String.]]></description>
        <function-name>reverseString</function-name>
        <function-class>org.example.customtags.taglib_functions.TaglibFunctions</function-class>
        <function-signature>java.lang.String reverseString(java.lang.String)</function-signature>
    </function>
    
    <function>
        <description><![CDATA[Returns the current date.]]></description>
        <function-name>dateNow</function-name>
        <function-class>org.example.customtags.taglib_functions.TaglibFunctions</function-class>
        <function-signature>java.util.Date dateNow()</function-signature>
    </function>
</facelet-taglib>